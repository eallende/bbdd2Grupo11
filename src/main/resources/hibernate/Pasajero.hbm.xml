<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
 
<hibernate-mapping package="muber.entities">
	<subclass name="Pasajero" extends="Usuario" discriminator-value="pasajero"  >
		<property name="creditoDisponible" column="credito_disponible" type="double" not-null="true"/> 
		
		<!-- RelaciÃ³n bidireccional con Viaje -->
		<set name="viajesRealizadosPasajero" table="viaje_pasajero" cascade="all">
			<key column="id_pasajero"/>
			<many-to-many column="id_viaje" class="Viaje"/>
		</set>
    </subclass>
</hibernate-mapping>
